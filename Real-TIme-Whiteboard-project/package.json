{
  "name": "real-time-whiteboard",
  "version": "1.0.0",
  "description": "Real-time collaborative whiteboard application",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-server": "npm install --prefix server",
    "install-client": "npm install --prefix client",
    "postinstall": "npm run install-server && npm run install-client",
    "build": "npm run build --prefix client",
    "render-postbuild": "mkdir -p /opt/render/project/src && cp package.json /opt/render/project/src/",
    "render-build": "bash render-specific-build.sh",
    "render-start": "node server/index.js"
  },
  "dependencies": {
    "react-router-dom": "^7.8.0",
    "react-transition-group": "^4.4.5",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
